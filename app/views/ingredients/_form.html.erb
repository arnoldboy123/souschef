<div class="form-container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <%= simple_form_for(@ingredient) do |f| %>
        <%= f.input :name, placeholder: "Name", label: false%>
        <%= f.input :unit, placeholder: "Unit",label: false%>
        <%= f.input :calories, placeholder: "Calories",label: false %>
        <%= f.input :price, placeholder: "Price",label: false %>
        <%= f.input :category, placeholder: "Category",label: false %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
