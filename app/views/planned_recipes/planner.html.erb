<h2 class="m-3">My Planner</h2>
<% @planner_recipes.each do |recipe| %>
  <% if recipe.date > Date.today %>
  <div class="planner-day" data-controller="planner-day">
    <% @planned_recipe = PlannedRecipe.find(recipe.id) %>
    <%= recipe.date %>
    <%= simple_form_for @planned_recipe, method: :patch, html: { data: { planner_day_target: 'form', action: 'change->planner-day#submitForm' }} do |f| %>
      <%= f.association :recipe, include_blank: true, selected: 0 %>
      <%= f.submit "Pick recipe", class: "btn btn-primary" %>
    <% end %>
    <p class="d-none" data-planner-day-target="meal"><%= recipe.recipe.name %></p>
  </div>
  <% end %>
<% end %>
