<div class="container">
  <div class="row">
    <div class="col-11" id="fridge">
      <div class="card-fridge bg-light" >
        <h2>My fridge</h2>
        <ul>
        <% @fridge_items.each do |item| %>
          <li class= "fridge"><%= item.ingredient.name %></li>
        <% end %>
        </ul>

        <%= link_to "add a new ingredient to fridge", new_fridge_item_path %>
      </div>
    </div>
  </div>
</div>
