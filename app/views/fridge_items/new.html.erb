<div class="container">
  <div class="form-container mb-3 mx-4">
    <div class="form text-center">
      <%= form_tag new_fridge_item_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find an ingredient"
        %>
        <%= submit_tag "Search", class: "search-ingredient-btn" %>
      <% end %>
    </div>
  </div>

  <%= render 'form', fridge_item: @fridge_item, ingredients: @ingredients %>
</div>
