<div class="container">
  <%= simple_form_for(@recipe) do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :instructions %>
    <%= f.association :ingredients, collection: Ingredient.all, input_html: { multiple: true } %>
    <%= f.input :cooking_time %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "add recipe", class: "btn btn-primary" %>
  <% end %>
</div>
